{
    // Keep Deno linting enabled for Deno-specific files
    "deno.lint": true,
    "deno.enablePaths": ["./supabase/shared", "./supabase/functions"],
    // Set ESLint as the default formatter for Vue and TypeScript files
    "[vue]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "editor.formatOnSave": true
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "editor.formatOnSave": true
    },
    // Configure ESLint to run on save for JS/TS/Vue files
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "always"
    },
    "eslint.format.enable": true,
    "cSpell.words": ["ilike", "lucide", "payables", "supabase", "VITE"]
}
